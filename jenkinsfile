pipeline{
   agent { 
               node {  label 'nvm'} 
             }
    stages{
    
      stage('Build application & test'){
        steps{
        sh '. ~/.nvm/nvm.sh use'
        sh 'npm install'
        }
        
          post{
            always {
              publishHTML([
              allowMissing: false, 
              alwaysLinkToLastBuild: false, 
              keepAll: false, 
              reportDir: 'coverage/lcov-report', 
              reportFiles: 'index.html', 
              reportName: 'Test coverage', 
              reportTitles: 'Test coverage'
              ])
            }
         }
      }         
  }
}
