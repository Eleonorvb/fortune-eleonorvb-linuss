pipeline{
  agent {
    docker{ image 'node:latest'}
  }
    stages{
      stage('Build application'){
        steps{
        sh 'npm install'
        }
      }
                
      stage('Test') {
        steps {
          sh 'node test'
        }
      }
                
      stage('Deliver') {
        steps {
          sh './jenkins/scripts/deliver.sh'
          input message: 'Finished using the web site? (Click "Proceed" to continue)'
          sh './jenkins/scripts/kill.sh'
        }
      }          
  }
}
